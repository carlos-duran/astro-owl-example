<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
  }

  img {
    display: block;
    max-width: 100%;
  }

  .container {
    max-width: 1240px;
    margin: 0 auto;
    width: 100%;
  }
</style>

<style>
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>
